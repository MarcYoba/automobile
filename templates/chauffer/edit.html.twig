{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>GESTION DE STOCK</title>

    <!-- Custom fonts for this template-->

</head>

<body class="bg-gradient-primary">

    <div class="container" >
        
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-2 d-none d-lg-block bg-register-image">
                        {% include "navbar.html.twig" %}
                    </div>
                    <div class="col-lg-10">
                        <div class="p-5">
                            <div class="text-center" >
                                <h1 class="h4 text-gray-900 mb-4">Edite un chauffeur</h1>
                            </div>
                            <div class="card-header py-3">
                                <div class="form-group row">
                                    <div class="col-sm-8 mb-3 mb-sm-0">
                                        Enregistrer un Edite
                                    </div>
                                    {% for message in app.flashes('success') %}
                                        <div class="alert alert-success">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                    <div class="col-sm-2 mb-3 mb-sm-0">
                                        {% for tempagence in app.user.tempAgences %}
                                            <a href="{{ path('app_home_dashboard', {'id': tempagence.agence.id}) }}" class="btn btn-primary btn-user btn-block">
                                                <i class="fas fa-home"></i>
                                                    home
                                            </a>  
                                        {% endfor %}
                                    </div>      
                                </div> 
                            </div>
                            <form method="POST" action="{{path('app_chauffer_update')}}">
                                <table class="table">
                                    <tr>
                                        <td class="align-middle">
                                            <label class="form-label fw-bold">Identification</label>
                                        </td>
                                        <td>
                                            <input type="text" 
                                                class="form-control" 
                                                name="chauffeurs[{{ chauffeur.id }}][identification]" 
                                                value="{{ chauffeur.identification }}"
                                                required
                                                pattern="[A-Za-z0-9]{1,20}">
                                            <div class="form-text">Code d'identification unique</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="align-middle">
                                            <label class="form-label fw-bold">Nom complet</label>
                                        </td>
                                        <td>
                                            <input type="text" 
                                                class="form-control" 
                                                name="chauffeurs[{{ chauffeur.id }}][nom]" 
                                                value="{{ chauffeur.nom }}"
                                                required
                                                minlength="2">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="align-middle">
                                            <label class="form-label fw-bold">Téléphone</label>
                                        </td>
                                        <td>
                                            <input type="tel" 
                                                class="form-control" 
                                                name="chauffeurs[{{ chauffeur.id }}][telephone]" 
                                                value="{{ chauffeur.Telephone }}"
                                                required
                                                pattern="[0-9]{9}">
                                            <div class="form-text">Format: 655271506</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="align-middle">
                                            <label class="form-label fw-bold">Ville</label>
                                        </td>
                                        <td>
                                            <select class="form-control form-select" name="chauffeurs[{{ chauffeur.id }}][ville]" required>
                                                <option value="">Sélectionnez une ville</option>
                                                <option value="Yaounde" {{ chauffeur.ville == 'Yaounde' ? 'selected' : '' }}>Yaounde</option>
                                                <option value="Douala" {{ chauffeur.ville == 'Douala' ? 'selected' : '' }}>Douala</option>
                                                <option value="Baffoussam" {{ chauffeur.ville == 'Baffoussam' ? 'selected' : '' }}>Baffoussam</option>
                                                <option value="Garoua" {{ chauffeur.ville == 'Garoua' ? 'selected' : '' }}>Garoua</option>
                                                <option value="Maroua" {{ chauffeur.ville == 'Maroua' ? 'selected' : '' }}>Maroua</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="align-middle">
                                            <label class="form-label fw-bold">Date création</label>
                                        </td>
                                        <td>
                                            <input type="date" 
                                                class="form-control" 
                                                name="chauffeurs[{{ chauffeur.id }}][createtAt]" 
                                                value="{{ chauffeur.createtAt | date('Y-m-d') }}"
                                                readonly
                                                style="background-color: #f8f9fa;">
                                            <div class="form-text">Date de création (non modifiable)</div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end">
                                            <button type="submit" class="btn btn-success">
                                                <i class="fas fa-save me-1"></i> Enregistrer les modifications
                                            </button>
                                        </td>
                                    </tr>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <!--<script src="produit.js"></script> --> 

</body>

</html>
{% endblock %}
