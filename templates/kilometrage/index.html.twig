{% extends 'base.html.twig' %}

{% block title %}Kilometrage{% endblock %}

{% block body %}
{% include "topbar.html.twig" %}
<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 ">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Kilometrage</h2>
              <div class="form-group row">
                <div class="col-sm-2">
                    {% include "navbar.html.twig" %}
                </div>
                <div class="col-sm-10">
                    {{form_start(form)}}

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="form3Example1cg">kilometrage total</label>
                    {{form_widget(form.kilometrage_total)}}
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="form3Example3cg">kilometrage jour</label>
                    {{form_widget(form.kilometrage_jour)}}
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Nombre de Tour</label>
                    {{form_widget(form.tour)}}
                  
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cg">Liste des Camion</label>
                    {{form_widget(form.camion)}}
                  
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="form3Example4cdg">Date du jour</label>
                    {{form_widget(form.createtAt)}}
                  
                </div>

                <div class="d-flex justify-content-center">
                  <button  type="submit" data-mdb-button-init
                    data-mdb-ripple-init class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Enregistrer</button>
                </div>

                

              {{ form_end(form)}}
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
// Utile si l'élément est chargé dynamiquement
setTimeout(function() {
    const sidebarToggle = document.getElementById('sidebarToggle');
    if (sidebarToggle) {
        sidebarToggle.click();
    }
}, 100); // Délai de 100ms // Délai de 100ms

</script>
{% endblock %}
