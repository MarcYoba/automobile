{% extends 'base.html.twig' %}

{% block title %}Hello LocataireController!{% endblock %}

{% block body %}
{% include "topbar.html.twig" %}
<div class="container-fluid">
    <div class="row">
        <!-- Barre de navigation sur le côté -->
        <div class="col-2 bg-dark text-white min-vh-100 p-0">
            {% include "navbar.html.twig" %}
        </div>

        <!-- Contenu principal -->
        <div class="col-10 p-0">
            <section class=" h-custom gradient-custom-2">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12">
                            <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                                <div class="card-body p-0">
                                {{ form_start(form)}}
                                    <div class=" form-group row g-0">
                                    
                                        <div class="col-lg-6">
                                            <div class="p-5">
                                            
                                                <h3 class="fw-normal mb-5" style="color: #4835d4;">Information General</h3>

                                                <div class="row">
                                                    <div class="col-md-6 mb-4 pb-2">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.identification)}}
                                                            <label class="form-label" for="form3Examplev2">identification</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4 pb-2">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.contact)}}
                                                            <label class="form-label" for="form3Examplev3">contact</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-4 pb-2">
                                                    <div class="form-outline">
                                                        {{ form_widget(form.nom)}}
                                                        <label class="form-label" for="form3Examplev4">Nom</label>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.adresse)}}
                                                            <label class="form-label" for="form3Examplev5">adresse</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.permis)}}
                                                            <label class="form-label" for="form3Examplev5">permis de conduit</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-4 pb-2 form-outline">
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.dateDebut)}}
                                                            <label class="form-label" for="form3Examplev5">Date Debut Location</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.heureDebut)}}
                                                            <label class="form-label" for="form3Examplev5">Heure Debut Location</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-4 pb-2 form-outline">
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.DateFin)}}
                                                            <label class="form-label" for="form3Examplev5">Date fin Location</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.heureFin)}}
                                                            <label class="form-label" for="form3Examplev5">Heure fin Location</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-4 pb-2">
                                                    <div class="form-outline">
                                            
                                                        <label class="form-label" for="form3Examplev4">Nom du Client</label>
                                                        {{ form_widget(form.client,{
                                                            'attr': {
                                                                    'class': 'form-control',
                                                                    'size': '4',
                                                                    'aria-label': 'Sélection du client'
                                                                }
                                                        })}}
                                                        
                                                    </div>
                                                </div>
                                            
                                            </div>
                                        </div>
                                        <div class="col-lg-6 bg-indigo text-black">
                                            <div class="p-5">
                                                <h3 class="fw-normal mb-5">Paiements Details</h3>

                                                <div class="row mb-4 pb-2 form-outline">
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.lieuDepart)}}
                                                            <label class="form-label" for="form3Examplev5">lieu Depart </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 mb-4 pb-2 mb-md-0 pb-md-0">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.lieurRetour)}}
                                                            <label class="form-label" for="form3Examplev5">lieur Retour </label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-4 pb-2">
                                                    <div class="form-outline">
                                                        {{ form_widget(form.dureeLocation)}}
                                                        <label class="form-label" for="form3Examplea3">duree Location</label>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-7 mb-4 pb-2">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.statusReservation)}}
                                                            <label class="form-label" for="form3Examplea5">status Reservation</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-4 pb-2">
                                                    <div class="form-outline">
                                                        {{ form_widget(form.paiementmobile)}}
                                                        <label class="form-label" for="form3Examplea6">Paiement Mobile</label>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-5 mb-4 pb-2">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.paiementbancaire)}}
                                                            <label class="form-label" for="form3Examplea7">Paiement Bancaire</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-7 mb-4 pb-2">
                                                        <div class="form-outline">
                                                            {{ form_widget(form.paiementcash)}}
                                                            <label class="form-label" for="form3Examplea8">Paiement Cash</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                
                                                <div class="mb-4">
                                                    <div class="form-outline">
                                                        {{ form_widget(form.paiementcredit)}}
                                                        <label class="form-label" for="form3Examplea">Paiement Credit</label>
                                                    </div>
                                                </div>

                                                <div class="mb-4">
                                                    <div class="form-outline">
                                                        {{ form_widget(form.montant)}}
                                                        <label class="form-label" for="form3Examplea9">montant</label>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                            </div>
                                        </div>
                                    
                                    </div>
                                {{ form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
